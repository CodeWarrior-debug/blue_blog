<div>
  <div>
    <h2> Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Write a new blog post...</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name"> Blog Title:</label>
        <input
          class="form-input"
          type="text"
          id="blog-title"
          name="blog-title"
        />
      </div>

      <div class="form-group">
        <label for="full-text"> Post goes below: </label>
        <input
          class="form-input"
          type="textarea"
          id="full-text"
          name="full-text"
        />
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post!</button>
      </div>
      </form>
      </div>

{{#if blogs.length}}
<div class="blog-list">
    <h3>My Posts:</h3>
    {{#each blogs as |blog|}}
    <div>
        <div>
            <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
        </div>
        <div>
            <div class="col-md-4">
                <button class='delete' data-id="{{blog.id}}">DELETE</button>
            </div>  
        </div>
    </div>
</div>

    {{/each}}
</div>
{{/if}}
</div>

<script src="/js/profile.js"></script>



